{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "frontend/src/**/*",
    "frontend/src/node_modules"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "frontend/public/*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "jest"
    ]
  }
}