{
    "name": "thunderdome-planning-poker",
    "version": "0.0.1",
    "description": "Planning Poker App",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/StevenWeathers/thunderdome-planning-poker.git"
    },
    "author": "Steven Weathers",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/StevenWeathers/thunderdome-planning-poker/issues"
    },
    "homepage": "https://github.com/StevenWeathers/thunderdome-planning-poker#readme",
    "private": true,
    "scripts": {
        "build": "rollup --config build/rollup.config.js",
        "autobuild": "rollup --config build/rollup.config.js -w",
        "dev": "run-p start:dev autobuild",
        "test": "jest frontend/__test__/unit",
        "test:watch": "npm run test -- --watch",
        "test:integration": "jest -c frontend/__test__/integration/jest.config.js",
        "test:integrationWithWatch": "jest -c frontend/__test__/integration/jest.config.js --watch",
        "test:integrationProd": "cross-env APP_URL='https://thunderdome.dev' jest -c frontend/__test__/integration/jest.config.js",
        "format": "prettier --write '{client}/**/*'"
    },
    "dependencies": {
        "js-cookie": "^2.2.1",
        "navaid": "^1.1.1",
        "sockette": "^2.0.6"
    },
    "devDependencies": {
        "@babel/core": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@fullhuman/postcss-purgecss": "^1.3.0",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/svelte": "^1.11.2",
        "autoprefixer": "^9.8.5",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.1.0",
        "cross-env": "^5.2.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "jest-puppeteer": "^4.4.0",
        "jest-transform-svelte": "^2.1.1",
        "lint-staged": "^9.5.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^7.0.32",
        "postcss-import": "^12.0.1",
        "prettier": "^1.18.2",
        "prettier-plugin-svelte": "^0.7.0",
        "puppeteer": "^1.20.0",
        "rollup": "^1.32.1",
        "rollup-plugin-bundle-html": "^0.2.2",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-copy": "^2.0.1",
        "rollup-plugin-delete": "^1.2.0",
        "rollup-plugin-livereload": "^1.3.0",
        "rollup-plugin-node-resolve": "^4.2.4",
        "rollup-plugin-postcss": "^2.9.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^5.3.0",
        "standard": "^12.0.1",
        "svelte": "^3.24.0",
        "svelte-loader": "^2.13.6",
        "svelte-preprocess": "^3.9.12",
        "tailwindcss": "^1.5.2"
    },
    "optionalDependencies": {
        "fsevents": "^1.0.0"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "semi": false,
        "arrowParens": "avoid",
        "svelteSortOrder": "scripts-styles-markup",
        "svelteStrictMode": true
    },
    "jest": {
        "transform": {
            "^.+\\.svelte$": "jest-transform-svelte",
            "^.+\\.js$": "babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "svelte"
        ],
        "testPathIgnorePatterns": [
            "node_modules"
        ],
        "bail": false,
        "verbose": true,
        "transformIgnorePatterns": [
            "node_modules"
        ],
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js, svelte, css, html}": [
            "npm run format",
            "git add"
        ]
    }
}
